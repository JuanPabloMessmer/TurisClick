{
  "expo": {
    "name": "TurisClick",
    "slug": "turisclick-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/TURISCLICK.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/TURISCLICK.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "scheme": "turisclick",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.turisclick.app",
      "config": {
        "googleMapsApiKey": "AIzaSyBbdEmtB5lYk0I231EHZ0LVRUK13p8oJ7M"
      },
      "infoPlist": {
        "UIViewControllerBasedStatusBarAppearance": true,
        "UIStatusBarHidden": false,
        "UIStatusBarStyle": "UIStatusBarStyleDarkContent"
      },
      "associatedDomains": ["applinks:turisclick.com"]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/TURISCLICK.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.turisclick.app",
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyBbdEmtB5lYk0I231EHZ0LVRUK13p8oJ7M"
        }
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "turisclick",
              "host": "payment",
              "pathPrefix": "/complete"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/TURISCLICK.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permite a TurisClick acceder a tu ubicaci√≥n para mostrar atracciones cercanas y calcular rutas."
        }
      ]
    ],
    "extra": {
      "googlePlacesApiKey": "AIzaSyBbdEmtB5lYk0I231EHZ0LVRUK13p8oJ7M"
    }
  }
}
